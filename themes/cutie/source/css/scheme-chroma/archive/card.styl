.Card-archive
  font-size: 14px
  text-align: left
  // background-color: white
  min-width: 20%
  max-width: 27%
  +for_breakpoint(mobile)
    max-width: 90vw
    width: 90vw
  margin: 1em 1%
  display: flex
  flex-wrap: wrap
  border-radius: 10px
  box-shadow: 0.5px 0.5px 3px -0.5px rgba(170, 175, 173, 0.61)
  // min-height: 8em
  position: relative
  +for_breakpoint(tablet)
    width: 90%
  +for_breakpoint(mobile)
    width: 90%
  .Card-meta
      a
        &:link
          text-decoration: none
      margin-top: 0.5em
      font-size: 1em
      color: white
      ul
        padding: 0
        display: block
        clear: both
        margin-left: 0em
        margin-top: 0.2em
        margin-bottom: 0
      li
        display: inline-block
        margin-left: 0.2em
  .Card-title
    flex-grow: 1
    padding-top: 0
    font-weight: normal
    margin: 0
    font-size: 1.2em
    margin-bottom: 4em
    a
      &:link
      &:visited
        text-decoration: none
        color: white
      &:hover
        text-decoration: underline
  .Card-badge
    border-radius: 10px
    border: 0px solid #FFF
    width: 100%
    height: 3px 
    background-color: white
    position:absolute
    top: 4%
    left: 0
    overflow: hidden

.Card-archive .Card-body 
  margin: 1em

for i in (1..9)
  .Card-archive:nth-child({i})
    background-image: linear-gradient(to bottom, $chroma[i] 0%, $chroma[i+1] 100%)


  

  