
.Card
  font-size:14px
  text-align: left
  width: 50%
  +for_breakpoint(tablet)
    width: 90%
  +for_breakpoint(mobile)
    width: 90%
  display: flex
  align-items: flex-start
  background-color: white
  // border-radius: 5px
  box-shadow: 0px 5px 6px -4px rgba(170, 175, 173, 0.61)
  // margin: 1em 0
  min-height: 16em
  // padding: 0
  position: relative
  .Card-body
    a
      &:link
      &:visited
      &:hover
        text-decoration: none
        color: #444
    flex: 1
    flex-direction: column
    display: flex
    align-items: flex-start
    justify-content: flex-start
    margin: 0 0.5em 0.5em 0.5em
    .Card-title
      display: block
      margin-top: 1.5em
      margin-bottom: 1.5em
      flex-grow: 1
      h2 
        margin: 0
        font-size: 1.6em
        font-weight: normal
      label
        font-size: 0.8em

    .Card-excerpt
      display: none
      p
        margin: 0
        line-height: 1.5
        font-size: 1.2em
      margin-top: 1.5em
      flex-grow: 1
      text-align: left
      justify-content: center
      flex: 1
      margin-right: 5em
    .Card-excerpt-touch
      p
        margin: 0
        line-height: 1.5
      margin-top: 0em
      margin-bottom: 7em
      flex-grow: 1
      text-align: left
      justify-content: center
      flex: 1
      margin-right: 1em
	    display: block
    .Card-meta
      .Card-tags
        margin-right: 0.5em
        +for_breakpoint(mobile)
          margin-right: 1em
        display: block
      position: absolute
      bottom: 1em
      display:block
      font-size: 1em
      color: #aaa
      ul
        padding: 0
        display: block
        margin-left: 0.3em
      li
        display: inline-block
        margin: 0 1em 0 0

  .Card-figure
    margin: 1.5em 1.5em 1.5em 1.5em
    +for_breakpoint(mobile)
      margin-left: 1em
    +for_breakpoint(tablet)
      margin-left: 1em
    img
      width: 2.8em
      height: 2.8em
      object-fit: cover
  
  .Card-tags
    position:absolute
    bottom: 2em
    right: 1.5em
 
for i in (1..10)
  if i % 2
    .Card-index-{i+1}
    .Card-index-{i}
      background-image: linear-gradient(to bottom, $chroma[i] 0%, $chroma[i+1] 100%)

.Card 
  .Card-body 
    *
      color: white
    a
      &:hover
      &:link
      &:visited
        color: white

